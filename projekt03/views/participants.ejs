<%- include("head.partial.ejs") %>

<main>
  <h1><%= title %></h1>

  <% if (!users || users.length === 0) { %>
    <p>Brak zarejestrowanych uczestników.</p>
  <% } else { %>
    <ul>
      <% users.forEach(u => { %>
        <li>
          <strong><%= u.name %> <%= u.lname %></strong> — <%= u.vtype %> | <%= u.vbrand %> <%= u.vmodel %>
          <span class="participant-actions">
            <a href="/participants/<%= u.id %>/edit" class="page-button small">Edytuj</a>
            <form action="/participants/<%= u.id %>/delete" method="POST" class="inline-delete">
              <button type="submit" class="page-button small danger">Usuń</button>
            </form>
          </span>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <a href="/register">Zarejestruj nowego uczestnika</a>
  <a href="/">Strona główna</a>
</main>

